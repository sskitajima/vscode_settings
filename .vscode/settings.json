{
    /////////////////////////////////////// VSCode settings
    //// Editor ////
    "editor.acceptSuggestionOnEnter": "off",
    "editor.renderWhitespace": "all",
    "editor.unicodeHighlight.includeComments": true,
    "editor.unicodeHighlight.ambiguousCharacters": true,
    "editor.tabSize": 2,
    "editor.rulers": [
        100
    ],
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.largeFileOptimizations": false,
    "editor.formatOnSave": true,
    "editor.language.colorizedBracketPairs": [
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "{",
            "}"
        ],
    ],
    //// diffEditor ////
    "diffEditor.ignoreTrimWhitespace": false,
    //// remote SSH ////
    "remote.SSH.remotePlatform": {
        "192.168.xxx.xxx": "linux",
    },
    //// Files ////
    "files.associations": {
        "*.repos": "yaml",
        "*.world": "xml",
        "*.xacro": "xml",
    },
    //// workbench ////
    // "workbench.editor.enablePreview": false,
    "workbench.preferredLightColorTheme": "Visual Studio 2017 Light - C++",
    //// Terminal ////
    "terminal.integrated.defaultProfile.windows": "Anaconda Prompt",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
        "Anaconda Prompt": {
            "path": "C:\\Windows\\System32\\cmd.exe"
        }
    },
    //// Others ////
    "update.showReleaseNotes": false,
    /////////////////////////////////////// Extention settings
    ////// Code Spell Checker ////
    "cSpell.words": [
        "RTPS",
        "athackst",
        "autopep",
        "cmake",
        "cppcheck",
        "cpplint",
        "DCMAKE",
        "deque",
        "devcontainer",
        "ints",
        "noqa",
        "pytest",
        "rclcpp",
        "rclpy",
        "repos",
        "rosdep",
        "rosdistro",
        "rosidl",
        "RTPS",
        "uncrustify",
        "Wextra",
        "Wpedantic",
        "xmllint"
    ],
    "cSpell.allowCompoundWords": true,
    "cSpell.ignorePaths": [
        ".vscode",
    ],
    //// CPP ////
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
    "C_Cpp.clang_format_style": "file:${workspaceFolder}/.vscode/.clang-format",
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c17",
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true,
    },
    //// Python ////
    // Autocomplete from ros python packages
    "python.autoComplete.extraPaths": [
        // "/opt/ros/humble/lib/python3.10/site-packages",
        // "/opt/ros/humble/local/lib/python3.10/dist-packages"
    ],
    "python.analysis.extraPaths": [
        // "/opt/ros/humble/lib/python3.10/site-packages/"
    ],
    // Environment file lets vscode find python files within workspace
    "python.envFile": "${workspaceFolder}/.env",
    // Use the system installed version of autopep8
    "python.formatting.autopep8Path": "/usr/bin/autopep8",
    "python.formatting.autopep8Args": [
        "--max-line-length=100"
    ],
    "python.condaPath": "C:\\Users\\s-kitajima\\AppData\\Local\\anaconda3\\Scripts",
    "python.defaultInterpreterPath": "C:\\Users\\s-kitajima\\AppData\\Local\\Programs\\Python\\Python39",
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.formatOnType": true
    },
    //// Uncrustify ////
    "uncrustify.configPath.linux": "/opt/ros/humble/lib/python3.10/site-packages/ament_uncrustify/configuration/ament_code_style.cfg",
    //// Git ////
    "git.openRepositoryInParentFolders": "never",
    "gitlens.views.searchAndCompare.avatars": false,
    //// SVN settings ////
    "svn.path": "C:\\Program Files\\TortoiseSVN\\bin\\",
    //// markdown ////
    "markdown-preview-enhanced.plantumlServer": "",
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.renderWhitespace": "all",
        "editor.acceptSuggestionOnEnter": "off"
    },
    //// Vim ////
    "vim.useCtrlKeys": false,
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["u"],
            "commands": ["undo"]
        },
        {
            "before": ["<C-r>"],
            "commands": ["redo"]
        }
    ],
    //// CMake ////
    "cmake.configureOnOpen": false,
}